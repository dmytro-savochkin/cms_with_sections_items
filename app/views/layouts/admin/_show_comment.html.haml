%div.comment
  %div.comment-header
    %strong
      = link_to user_avatar_and_name(comment.user).html_safe, comment.user.link
      = login_provider_in_brackets(comment.user)
    at
    = l comment.created_at, :format => :short
    in
    = link_to comment.item.name, edit_admin_item_path(comment.item.id)

  %span= sanitize simple_format comment.text

  %div
    = link_to 'delete comment', admin_comment_path(comment),
      :method => :delete, :remote => true, "data-type" => :json,
      :class => %w(Comment delete), :confirm => 'Are you sure?'