%div#login_panel
  - if user_signed_in?
    = link_to "Sign out " + login_provider_in_brackets, destroy_user_session_path, :method => :delete
  - else
    = link_to_function "Sign in", "$('ul#login_links').toggle(150)", :class => %w(dashed)
    %ul#login_links.hidden.ul-marked
      %li= link_to "Facebook", user_omniauth_authorize_path(:facebook)
      %li= link_to "Google", user_omniauth_authorize_path(:google_oauth2)
      %li= link_to "Twitter", user_omniauth_authorize_path(:twitter)
      %li= link_to "Vkontakte", user_omniauth_authorize_path(:vkontakte)